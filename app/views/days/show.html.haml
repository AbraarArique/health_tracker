- content_for :title do
  %title Day #{@day.day} | Health Tracker

.row
  .small-12.columns
    %h1.text-center
      Day #{@day.day} Activity
      %a{href: "#", data: {"reveal-id" => "day_form_container"}, class: "button radius"} EDIT DAY
  .small-12.medium-6.columns
    %h1 Workouts
    - @day.workouts.each do |i|
      .row
        .small-3.columns
          %h3= link_to i.name, day_workout_path(@day, i)
        .small-6.columns
          %p= pluralize(i.cal, "Calorie")
        .small-3.columns
          %p= link_to "DELETE", day_workout_path(@day, i), class: "button alert small"
    %a{href: "#", data: {"reveal-id" => "meal_form_container"}, class: "button round"} ADD A MEAL
  .small-12.medium-6.columns
    %h1 Meals
    - @day.meals.each do |i|
      .row
        .small-3.columns
          %h3= link_to i.name, day_meal_path(@day, i)
        .small-6.columns
          %p= pluralize(i.cal, "Calorie")
        .small-3.columns
          %p= link_to "DELETE", day_meal_path(@day, i), class: "button alert small"
    %a{href: "#", data: {"reveal-id" => "workout_form_container"}, class: "button round"} ADD A WORKOUT
  .small-12.columns
    - if @workout_sum > @meal_sum
      %p.text-center Total #{@workout_sum} - #{@meal_sum} = #{pluralize(@workout_sum - @meal_sum, "Calorie")} lost!
    - elsif  @workout_sum < @meal_sum
      %p.text-center Total #{@meal_sum} - #{@workout_sum} = #{pluralize(@meal_sum - @workout_sum, "Calorie")} gained!
    - else
      %p.text-center 0 Calories lost/gained. Activity nuetral.
    #day_form_container.reveal-modal{data: {"reveal" => true}, role: "dialog"}
      = form_for @day do |f|
        = f.label :day
        = f.number_field :day
        = f.submit "SAVE", class: "button radius success"
      %a.close-reveal-modal{aria: {"label": "Close"}} &#215;
    #meal_form_container.reveal-modal{data: {"reveal" => true}, role: "dialog"}
      = form_for [@day, @day.meals.build] do |f|
        = f.label :name
        = f.text_field :name
        = f.label :foods
        = f.text_area :foods
        = f.label :cal
        = f.number_field :cal
        = f.submit "SAVE", class: "button radius success"
      %a.close-reveal-modal{aria: {"label": "Close"}} &#215;
    #workout_form_container.reveal-modal{data: {"reveal" => true}, role: "dialog"}
      = form_for [@day, @day.workouts.build] do |f|
        = f.label :name
        = f.text_field :name
        = f.label :exercises
        = f.text_area :exercises
        = f.label :cal
        = f.number_field :cal
        = f.submit "SAVE", class: "button radius success"
      %a.close-reveal-modal{aria: {"label": "Close"}} &#215;