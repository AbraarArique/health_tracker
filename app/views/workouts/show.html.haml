- content_for :title do
  %title Workout #{@workout.id} | Health Tracker

.row
  .small-12.columns
    %h1.text-center #{@workout.name} of Day #{@workout.day_id}
    %h3.text-center
      %a{href: '#', data: {'reveal-id' => 'workout_form_container'}, class: 'button round'} EDIT WORKOUT
  .small-12.columns
    %p Exercises:
    %ul
      - @workout.exercises.split(',').each do |i|
        %li= i
    %p Calories lost: #{@workout.cal}
    #workout_form_container.reveal-modal{data: {'reveal' => true}, role: 'dialog'}
      = form_for @workout, url: day_workout_path(@workout.day_id, @workout) do |f|
        = f.label :name
        = f.text_field :name
        = f.label :exercises
        = f.text_area :exercises
        = f.label :cal
        = f.number_field :cal
        = f.submit 'Save', class: 'button'
      %a.close-reveal-modal{aria: {'label' => 'Close'}} &#215;