- content_for :title do
  %title Edit Meal

.row
  .small-12.columns
    %h1.text-center Edit Meal
    = form_for @meal, url: day_meal_path(@meal.day_id, @meal) do |f|
      = f.label :name
      = f.text_field :name
      = f.label :foods
      = f.text_area :foods
      = f.label :cal
      = f.number_field :cal
      = f.submit 'Save', class: 'button'